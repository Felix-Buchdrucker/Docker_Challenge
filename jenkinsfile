node{
    stage("Preparation"){
        checkout scm
    }
    stage("Login"){
        withCredentials([usernamePassword(credentialsId: 'DockerHUBID', passwordVariable: 'pass', usernameVariable: 'user')]) {
        sh "echo test"
        // sh "apt-get install docker"
        }
    }
    stage("Execution"){
        sh "docker run buchdfel/docker-project:latest"
    }
    stage("Inside Docker"){
        docker.image('buchdfel/docker-project:latest').inside() {
            sh "python app_new.py"
        }
    }
}
